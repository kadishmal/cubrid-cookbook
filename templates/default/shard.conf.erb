[shard]
MASTER_SHM_ID           =45001
ADMIN_LOG_FILE          =log/broker/cubrid_broker.log

[%shard]
SERVICE                 =ON
BROKER_PORT             =45011
MIN_NUM_APPL_SERVER     =1
MAX_NUM_APPL_SERVER     =1
APPL_SERVER_SHM_ID      =45011
LOG_DIR                 =log/broker/sql_log
ERROR_LOG_DIR           =log/broker/error_log
SQL_LOG                 =ON
TIME_TO_KILL            =120
SESSION_TIMEOUT         =300
KEEP_CONNECTION         =ON
SHARD_DB_NAME			=<%= "#{node['cubrid']['shard_db']}" %>
SHARD_DB_USER			=<%= "#{node['cubrid']['shard_user']}" %>
SHARD_DB_PASSWORD		=<%= "#{node['cubrid']['shard_user_password']}" %>
MIN_NUM_PROXY           =1
MAX_NUM_PROXY           =1
PROXY_LOG_FILE          =log/broker/proxy_log
PROXY_LOG               =ALL
MAX_CLIENT              =10
METADATA_SHM_ID         =45092
SHARD_CONNECTION_FILE	=shard_connection.txt
SHARD_KEY_FILE			=shard_key.txt

